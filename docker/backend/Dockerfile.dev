FROM node:18-alpine

WORKDIR /app/server

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Install global dependencies
RUN npm install -g ts-node-dev helmet compression express cors express-rate-limit passport winston \
    passport-jwt passport-local passport-google-oauth20 passport-github2 bcryptjs typeorm pg

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies with legacy peer deps to handle any compatibility issues
RUN npm install --legacy-peer-deps

# Copy source code (this will be overridden by volume mount)
COPY src/ ./src/

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3457/api/health || exit 1

EXPOSE 3457

# Start development server
ENV NODE_PATH=/usr/local/lib/node_modules
CMD ["ts-node-dev", "--respawn", "--transpile-only", "src/index.ts"]
