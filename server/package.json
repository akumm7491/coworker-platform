{
  "name": "coworker-platform-server",
  "version": "1.0.0",
  "description": "Backend server for Coworker Platform",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --experimental-specifier-resolution=node --esm src/server.ts",
    "build": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm migration:generate -- -d ormconfig.ts",
    "migration:run": "npm run typeorm migration:run -- -d ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ormconfig.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.10.2",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^7.8.2",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.8.1",
    "tsx": "^3.12.7",
    "typeorm": "^0.3.17",
    "typescript": "^5.1.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express-validator": "^3.0.2",
    "@types/kafkajs": "^1.9.0",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "ts-node": "^10.9.2"
  }
}
